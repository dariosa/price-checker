{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "Price Checker",
    "action": {
      "default_popup": "js/index.html",
      "default_title": "Price Checker"
    },
    "permissions": [
      "activeTab", "scripting", "storage", "unlimitedStorage"
    ],
    "background": {
        "service_worker": "js/background.js"
      },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["js/contentScript.js"]
      }
    ],
    "host_permissions": [
      "*://*/*"
    ]
  }